<div class = "booyah-box">
	<div class="col-xs-4">
		<%= image_tag 'user.png' %>
	</div>
	<div class="col-xs-6" >
	<h1><%= @user.email %></h1>
	<h3>Member Since <%= @user.created_at.strftime("%B %d, %Y") %></h3>
	<h4><%= @user.comments.length %> Total Comments</h4>
	<h4><%= @user.comments.where(:rating => "5_stars").count %> total 5 star reviews</h4>
	</div>
	<div class="clear"></div>
</div>